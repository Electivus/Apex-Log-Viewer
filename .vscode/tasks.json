{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": [
        "$tsc-watch",
        {
          "owner": "esbuild",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": { "regexp": "^âœ˜ \\u005bERROR\\u005d (.*)$", "message": 1 },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\[watch\\] build started$",
            "endsPattern": "^\\[watch\\] build finished(?:, watching for changes\\.\\.\\.)?$"
          }
        }
      ]
    },
    {
      "label": "watch-tests",
      "type": "npm",
      "script": "watch-tests",
      "isBackground": true,
      "group": "test",
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "compile",
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": []
    }
  ]
}
