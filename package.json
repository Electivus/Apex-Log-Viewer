{
  "name": "apex-log-viewer",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.3.1",
  "publisher": "electivus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Electivus/Apex-Log-Viewer"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#2563eb",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/visual-studio-marketplace/v/electivus.apex-log-viewer?label=Marketplace",
      "href": "https://marketplace.visualstudio.com/items?itemName=electivus.apex-log-viewer",
      "description": "Marketplace Version"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/i/electivus.apex-log-viewer",
      "href": "https://marketplace.visualstudio.com/items?itemName=electivus.apex-log-viewer",
      "description": "Installs"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/d/electivus.apex-log-viewer",
      "href": "https://marketplace.visualstudio.com/items?itemName=electivus.apex-log-viewer",
      "description": "Downloads"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/r/electivus.apex-log-viewer",
      "href": "https://marketplace.visualstudio.com/items?itemName=electivus.apex-log-viewer",
      "description": "Rating"
    },
    {
      "url": "https://github.com/Electivus/Apex-Log-Viewer/actions/workflows/ci.yml/badge.svg?branch=main",
      "href": "https://github.com/Electivus/Apex-Log-Viewer/actions/workflows/ci.yml?query=branch%3Amain",
      "description": "CI"
    }
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "extensionDependencies": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "sfLogs.pageSize": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 200,
          "markdownDescription": "%configuration.sfLogs.pageSize.description%"
        },
        "sfLogs.headConcurrency": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "markdownDescription": "%configuration.sfLogs.headConcurrency.description%"
        },
        "sfLogs.saveDirName": {
          "type": "string",
          "default": "apexlogs",
          "markdownDescription": "%configuration.sfLogs.saveDirName.description%"
        },
        "sfLogs.trace": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable verbose trace logging for CLI and HTTP calls (Output: Apex Log Viewer)."
        },
        "sfLogs.tailBufferSize": {
          "type": "number",
          "default": 10000,
          "minimum": 1000,
          "maximum": 200000,
          "markdownDescription": "%configuration.sfLogs.tailBufferSize.description%"
        }
      }
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "salesforceLogsPanel",
          "title": "%salesforce.panel.title%",
          "icon": "media/icon.png"
        },
        {
          "id": "salesforceTailPanel",
          "title": "%salesforce.tail.panel.title%",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "salesforceLogsPanel": [
        {
          "id": "sfLogViewer",
          "name": "%salesforce.logs.view.name%",
          "type": "webview"
        }
      ],
      "salesforceTailPanel": [
        {
          "id": "sfLogTail",
          "name": "%salesforce.tail.view.name%",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "sfLogs.refresh",
        "title": "%command.refresh.title%",
        "category": "Apex Logs"
      },
      {
        "command": "sfLogs.selectOrg",
        "title": "%command.selectOrg.title%",
        "category": "Apex Logs"
      },
      {
        "command": "sfLogs.tail",
        "title": "%command.tail.title%",
        "category": "Apex Logs"
      },
      {
        "command": "sfLogs.showOutput",
        "title": "Show Extension Output",
        "category": "Apex Logs"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sfLogs.refresh",
          "when": "view == sfLogViewer",
          "group": "navigation@1"
        },
        {
          "command": "sfLogs.selectOrg",
          "when": "view == sfLogViewer",
          "group": "navigation@2"
        },
        {
          "command": "sfLogs.tail",
          "when": "view == sfLogViewer",
          "group": "navigation@3"
        },
        {
          "command": "sfLogs.showOutput",
          "when": "view == sfLogViewer || view == sfLogTail",
          "group": "navigation@99"
        }
      ]
    }
  },
  "scripts": {
    "test:clean": "node scripts/clean-vscode-test.js",
    "clean": "node -e \"const fs=require('fs');const p=require('path');const del=d=>{try{fs.rmSync(d,{recursive:true,force:true})}catch{}};del('dist');del('out');for(const f of ['media/main.js','media/main.js.map','media/tail.js','media/tail.js.map']){try{fs.unlinkSync(f)}catch{}}\"",
    "prebuild": "npm run clean",
    "vscode:prepublish": "npm run package",
    "compile": "npm run lint && tsc -p tsconfig.extension.json",
    "watch": "npm-run-all -p watch:*",
    "watch:tsc": "tsc -p tsconfig.extension.json -w",
    "watch:webview": "esbuild src/webview/main.tsx src/webview/tail.tsx --bundle --outdir=media --platform=browser --format=iife --sourcemap --watch",
    "build:webview": "esbuild src/webview/main.tsx src/webview/tail.tsx --bundle --outdir=media --platform=browser --format=iife --minify",
    "build": "npm run compile && npm run build:webview",
    "build:icon": "node scripts/gen-icon.mjs",
    "build:assets": "node scripts/gen-assets.mjs",
    "nls:extract": "vscl \"dist/**/*.js\"",
    "nls:write": "node scripts/gen-nls.cjs",
    "prepackage": "npm run clean",
    "package": "npm run compile && (npm run -s nls:extract || true) && npm run nls:write && npm run build:webview",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "vsce:package": "vsce package --no-dependencies",
    "vsce:package:pre": "vsce package --no-dependencies --pre-release",
    "vsce:publish": "vsce publish --no-dependencies",
    "vsce:publish:pre": "vsce publish --no-dependencies --pre-release",
    "compile-tests": "node -e \"try{require('fs').rmSync('out/test',{recursive:true,force:true})}catch(e){}\" && tsc -p tsconfig.test.json",
    "watch-tests": "tsc -p tsconfig.test.json -w",
    "pretest": "npm run test:clean && npm run test:linux-deps && npm run compile && npm run compile-tests",
    "test": "bash scripts/run-tests.sh --scope=unit",
    "test:unit": "npm run pretest && bash scripts/run-tests.sh --scope=unit",
    "test:integration": "npm run pretest && bash scripts/run-tests.sh --scope=integration --install-deps --timeout=900000",
    "test:all": "npm run pretest && bash scripts/run-tests.sh --scope=all",
    "test:linux-deps": "bash scripts/install-linux-deps.sh",
    "test:unit:ci": "npm run pretest && bash scripts/run-tests.sh --scope=unit --vscode=stable",
    "test:integration:ci": "npm run pretest && bash scripts/run-tests.sh --scope=integration --vscode=stable --install-deps --timeout=900000",
    "test:ci": "npm run test:unit:ci && npm run test:integration:ci",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-window": "^1.8.8",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "mocha": "^11.7.1",
    "@testing-library/react": "^16.0.1",
    "jsdom": "^24.0.0",
    "@types/jsdom": "^21.1.7",
    "proxyquire": "^2.1.3",
    "@types/proxyquire": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^1.8.11",
    "sharp": "^0.33.5",
    "typescript": "^5.9.2",
    "vscode-nls-dev": "^4.0.4"
  },
  "dependencies": {
    "@salesforce/apex-node": "^8.2.11",
    "@salesforce/core": "^8.7.0",
    "cross-spawn": "^7.0.6",
    "vscode-nls": "^5.2.0"
  },
  "files": [
    "dist/**",
    "media/main.js",
    "media/tail.js",
    "media/icon.png",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "package.nls.json",
    "package.nls.pt-br.json"
  ],
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,md,css,scss}": "prettier --write"
  },
  "homepage": "https://github.com/Electivus/Apex-Log-Viewer#readme",
  "bugs": {
    "url": "https://github.com/Electivus/Apex-Log-Viewer/issues"
  },
  "keywords": [
    "salesforce",
    "apex",
    "logs",
    "developer",
    "tooling",
    "tail",
    "debug"
  ]
}
